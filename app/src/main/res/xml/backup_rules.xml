<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Exclude sensitive data from backup -->
    <exclude domain="sharedpref" path="camera_credentials.xml" />
    <exclude domain="database" path="cameras.db" />
    <exclude domain="file" path="recordings" />
    <exclude domain="file" path="snapshots" />
    <exclude domain="file" path="thumbnails" />
    <exclude domain="file" path="cache" />
    
    <!-- Include safe preferences -->
    <include domain="sharedpref" path="app_preferences.xml" />
    <include domain="sharedpref" path="ui_settings.xml" />
    <include domain="sharedpref" path="storage_settings.xml" />
</full-backup-content>
